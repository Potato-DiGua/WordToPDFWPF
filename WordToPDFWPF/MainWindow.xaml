<Window x:Class="WordToPDFWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordToPDFWPF"
        mc:Ignorable="d"
        Title="MainWindow" Width="800" VerticalAlignment="Top" SizeToContent="Height">
    <StackPanel>
        <Button Content="清空" Width="40" Height="20" Margin="20,10,0,10" HorizontalAlignment="Left" Click="Clear_Button_Click"/>
        <ListBox Name="fileList" Height="600" Margin="0,0,0,20" AllowDrop="True" Drop="fileList_Drop">
        </ListBox>
        <Button Content="转换" Width="60" HorizontalAlignment="Right" Margin="0,0,60,0" Height="20" VerticalAlignment="Top" Click="Transform_Button_Click"/>
        <StackPanel Name="progressBarStack" VerticalAlignment="Center" Orientation="Horizontal" Margin="10,0,0,0" >
            <Label Content="进度：" />
            <ProgressBar Name="progressBar"  Height="15" Width="300" Margin="0,0,10,0"/>
            <Label Name="progressBarValue" Content="0" />
            <Label Content="/" />
            <Label Name="progressBarMax" Content="0" />
        </StackPanel>

    </StackPanel>
</Window>
